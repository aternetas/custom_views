<resources>
    <!-- Base application theme. -->
    <style name="Theme.CustomViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="bottomButtonsStyle">@style/defaultButtonStyle</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="myButtons">
        <item name="bottomPositiveButtonBackgroundColor">@color/green_200</item>
        <item name="bottomPositiveButtonRippleColor">@color/purple_700</item>

        <item name="bottomNegativeButtonBackgroundColor">@color/red_200</item>
        <item name="bottomNegativeButtonRippleColor">@color/red_highlight</item>
    </style>

    <style name="defaultButtonStyle">
        <item name="bottomPositiveButtonBackgroundColor">#00796B</item>
        <item name="bottomNegativeButtonBackgroundColor">#D32F2F</item>
    </style>

    <style name="myBottomButtonsStyle">
        <item name="bottomPositiveButtonBackgroundColor">#033C1B</item>
        <item name="bottomNegativeButtonBackgroundColor">#5A0D0D</item>
    </style>
</resources>