<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toButtonsActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_buttons_activity"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toTicTacToeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_tic_tac_toe_field"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/toButtonsActivityButton"
        app:layout_constraintStart_toStartOf="@+id/toButtonsActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/toButtonsActivityButton" />

</androidx.constraintlayout.widget.ConstraintLayout>